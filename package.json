{
  "scripts": {
    "dev": "node ./devServer",
    "prod": "yarn build && yarn prod:serve",
    "// Build for production": "",
    "build": "yarn build:clean && yarn build:vite && yarn build:prerender",
    "build:clean": "rm -rf dist/",
    "// We need to build `vite-plugin-ssr` because Yarn symlinks `vite-plugin-ssr`": "",
    "build:vite": "vite build && vite build --ssr",
    "build:prerender": "vite-plugin-ssr prerender --noExtraDir",
    "// Static serve for production": "",
    "prod:serve": "serve ./dist/client/ --listen 3000"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "@types/lowlight": "^0.0.2",
    "@types/node": "^15.12.1",
    "@types/react": "^17.0.9",
    "@types/react-dom": "^17.0.6",
    "@vitejs/plugin-react": "^1.0.4",
    "express": "^4.17.1",
    "highlightjs-vue": "^1.0.0",
    "lowlight": "^1.20.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remark-highlight.js": "^6.0.0",
    "serve": "^11.3.2",
    "typescript": "^4.3.2",
    "vite": "^2.3.6",
    "vite-plugin-mdx": "^3.5.6",
    "vite-plugin-ssr": "^0.3.35"
  }
}
